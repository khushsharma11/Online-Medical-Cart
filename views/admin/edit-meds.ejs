<html>
<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <title>Edit Medicine</title>

  <% include ../partials/header %>
  <% include ../partials/admin-sidebar %>


  <!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <h1>
        Dashboard
        <small>Welcome!</small>
      </h1>
      <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Level</a></li>
        <li class="active">Here</li>
      </ol>
    </section>

    <!-- Main content -->
    <section class="content container-fluid">

      <!--------------------------
        | Your Page Content Here |
        -------------------------->

          <div class="box box-primary">
            <div class="box-header with-border">
              <h3 class="box-title">Add New</h3>
            </div>
            <!-- /.box-header -->
            <!-- form start -->
            <form method="post">
              <div class="box-body">

                <div class="form-group">
                  <label>Medicine Name</label>
                  <input type="text" class="form-control" id="hotel-title" placeholder="Medicine Name" name="medicine_name" value="<%=result.name%>">
                </div>
                <div class="form-group">
                    <label>Medicine Price</label>
                    <input type="text" class="form-control" id="hotel-location" placeholder="price" name="price" value="<%=result.price%>">
                </div>
                <div class="form-group">
                    <label>Medicine Description</label>
                    <textarea class="form-control" rows="3" id="hotel-desc" placeholder="Medicine Description" name="med_desc" value="<%=result.description%>"></textarea>
                </div>
                <div class="form-group">
                    <label>Medicine Category</label>
                    <select class="form-control" name="category" required>
            <option value="">-SELECT-</option>
              <option value="Aspirine">Aspirine</option>
              <option value="Paracetamol">Paracetamol</option>
              <option value="Cold">Cold</option>
              <option value="Kids">Kids</option>
                    </select>
                  </div>
  
                <div class="form-group">
                    <label>Vendor Name</label>
                    <textarea class="form-control" rows="3" id="hotel-desc" placeholder="Vendor Name" name="vendor" required></textarea>
                  </div>  
                  <div class="form-group">
                  <label>Medicine Type</label>
                  <select class="form-control" name="medType" required>
                      <option value="">-SELECT-</option>
                      <option value="Solid">Solid</option>
                      <option value="Liquid">Liquid</option>
                  </select>
                </div>
  
                  <div class="form-group">
                    <label>Availability</label>
                    <input type="radio" name="availability" value="Yes"> Yes<br>
                    <input type="radio" name="availability" value="No"> No<br>
                    </select>
  
                </div>

                <div class="error">
                <% if(message != null){ %>
                <p><span id="error"><%= message %></span></p>
                <% } %>
                </div>	

                <button type="submit" class="btn btn-primary">UPDATE</button>
              </div>
            </form>
          </div>

    </section>
    <!-- /.content -->
  </div>
  <!-- /.content-wrapper -->