<html>
<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <title>All Room Types</title>

  <% include ../partials/header %>
  <% include ../partials/admin-sidebar %>

  <!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <h1>
        Dashboard
        <small>Welcome!</small>
      </h1>
      <ol class="breadcrumb"></ol>
        <li><a href="#"><i class="fa fa-dashboard"></i> Level</a></li>
        <li class="active">Here</li>
      </ol>
    </section>

    <!-- Main content -->
    <section class="content container-fluid">

      <!--------------------------
        | Your Page Content Here |
        -------------------------->

          <div class="box">
            <div class="box-header">
              <h3 class="box-title">All Room Types</h3>
            </div>
            <!-- .box-header -->
            <div class="box-body table-responsive no-padding">
              <table class="table table-hover">
                <tr>
                  <th>Room Type ID</th>
                  <th>Hotel ID</th>
                  <th>Room Type</th>
                  <th>Price</th>
                  <th>Capacity</th>
                  <th>Available</th>
                  <th>Description</th>
                  <th>Last Modified By</th>
                  <th>Action</th>
                </tr>
                <% for(var i=0; i < List.length; i++){ %>
                            <tr>
                            <td><%= List[i].room_type_id %></td>
                            <td><%= List[i].hotel_id %></td>
                            <td><%= List[i].room_name %></td>
                            <td><%= List[i].price %></td>
                            <td><%= List[i].capacity %></td>
                            <td><%= List[i].available %></td>";
                            <td width="35%"><%= List[i].room_desc %></td>";
                            <td><%= List[i].last_modified %></td>";

                          <td><a href="/viewroom/edit/<%= List[i].room_type_id %>">Edit</a> |<a href="/viewroom/delete/<%= List[i].room_type_id %>">Delete</a></td>
                            </tr>
                            <% } %>
              </table>
            </div>
            <!-- /.box-body -->
          </div>
          <!-- /.box -->

    </section>
    <!-- /.content -->
  </div>
  <!-- /.content-wrapper -->
